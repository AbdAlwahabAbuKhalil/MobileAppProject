<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/backimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="64dp" />

    <SearchView
        android:id="@+id/searchBooks"
        android:layout_width="406dp"
        android:layout_height="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#DCC3C3"
        app:layout_constraintTop_toTopOf="@+id/backimg" />

    <ListView
        android:id="@+id/listBooks"
        android:layout_width="411dp"
        android:layout_height="650dp"
        android:layout_marginStart="44dp"
        android:background="#DCC3C3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/backimg"
        app:layout_constraintTop_toBottomOf="@+id/searchBooks" />


</androidx.constraintlayout.widget.ConstraintLayout>